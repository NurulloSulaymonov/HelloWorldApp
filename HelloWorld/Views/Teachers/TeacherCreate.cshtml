@model FirstProject.Models.ModelView.TeacherModel
<form action="TeacherCreate" method="post">
    
    <div class="form row">
        <div class="form-group col-md-5">   
            <label asp-for="Name"></label>
            <input type="text" class="form-control" asp-for="Name">
        </div>
        <div class="form-group col-md-5">
            <label asp-for="Surname"></label>
            <input type="text" class="form-control" asp-for="Surname">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-8">
            <label asp-for="Age"></label>
            <select asp-for="Age" class="form-control">
                <option selected>Choose...</option>
                @for (int i = 25; i <= 100; i++)
                {
                    <option>@i</option>
                }
            </select>
        </div>
        <div class="form-group col-md-8">
            <label asp-for="PhoneNumber"></label>
            <input type="text" class="form-control" asp-for="PhoneNumber">
        </div>
    </div>
      <button type="submit" class="btn btn-primary">Register</button>
</form>